<!-- =========================================================
     FR : Page d’accueil — Port Russell
     EN : Home page — Port Russell
     ========================================================= -->
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8" />

  <!-- FR : Titre de la page / EN : Page title -->
  <title>Port Russell</title>

  <!-- FR : Feuille de style principale / EN : Main stylesheet -->
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <!-- =========================================================
       FR : En-tête (Header)
       EN : Header (Top navigation bar)
       ========================================================= -->
  <header class="topbar">
    <nav class="nav">
      <!-- Liens de navigation principaux -->
      <a href="/">Accueil</a> <!-- FR : Retour accueil / EN : Back to home -->
      <a href="/dashboard">Tableau de bord</a> <!-- FR : Tableau principal / EN : Main dashboard -->
      <a href="/docs" target="_blank" rel="noreferrer">Docs API (Swagger)</a> <!-- FR : Documentation API / EN : API documentation -->
    </nav>
  </header>

  <!-- =========================================================
       FR : Contenu principal centré
       EN : Centered main content
       ========================================================= -->
  <main class="home-main">
    <section class="home-hero">
      <!-- =====================================================
           FR : Texte d’introduction au-dessus du formulaire
           EN : Centered text above the login form
           ===================================================== -->
      <div class="home-title">
        <h1>Port Russell</h1>
        <p>Application de gestion des catways et des réservations</p>
      </div>

      <!-- =====================================================
           FR : Formulaire de connexion utilisateur
           EN : User login form
           ===================================================== -->
      <form method="POST" action="/login" class="card auth-card">
        <!-- FR : Lien d’accès direct (utile pour tests sans login)
             EN : Direct access link (useful for testing without login) -->
        <div class="helper">
          <a href="/dashboard">➡️ Accéder au tableau de bord</a>
        </div>

        <!-- FR : Champ email / EN : Email input -->
        <div>
          <label>Email</label>
          <input type="email" name="email" placeholder="vous@exemple.com" required />
        </div>

        <!-- FR : Champ mot de passe / EN : Password input -->
        <div>
          <label>Mot de passe</label>
          <input type="password" name="password" placeholder="••••••••" required />
        </div>

        <!-- FR : Bouton de connexion / EN : Submit (login) button -->
        <button type="submit">Se connecter</button>
      </form>
    </section>
  </main>
</body>
</html>
